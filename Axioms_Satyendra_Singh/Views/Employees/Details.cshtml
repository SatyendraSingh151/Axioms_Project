@model Axioms_Satyendra_Singh.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
}
<style>
    body {
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    h1, h4 {
        color: #23408f;
        font-weight: bold;
        text-align: center;
    }

    hr {
        border: 1px solid #6495ed;
    }

    dl.row {
        background: #e3f3ff;
        padding: 26px 20px;
        border-radius: 14px;
        box-shadow: 0 0 12px #b3c6e3;
        margin: 32px auto 24px auto;
        max-width: 510px;
        font-size: 17px;
    }

    dt.col-sm-2 {
        font-weight: bold;
        color: #2ca2fa;
        font-size: 17px;
    }

    dd.col-sm-10 {
        font-size: 17px;
        padding-bottom: 10px;
        color: #153250;
    }

    a {
        padding: 8px 18px;
        margin: 0 8px;
        font-size: 16px;
        border-radius: 7px;
        text-decoration: none;
        background-color: #3085c3;
        color: white !important;
        transition: background 0.2s;
        display: inline-block;
        font-weight: bold;
    }

        a:hover {
            background-color: #176ca1;
            text-decoration: underline;
        }

    .details-actions {
        text-align: center;
        margin-top: 14px;
    }
</style>
<h1>Employee Details</h1>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EMail)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EMail)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Phone_No)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone_No)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Gender)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Gender)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Salary)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Salary)</dd>
    </dl>
</div>
<div class="details-actions">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>
